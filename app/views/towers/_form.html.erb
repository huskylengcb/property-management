<%= simple_form_for [@tower], wrapper: :admin_form do |f| %>
  <%= f.error_notification %>
  <div class="form-body">
    <%= f.input :name, label: '楼号', autofocus: true, placeholder: '请填写住户号' %>
  </div>
  <div class="form-actions">
    <div class="row">
      <div class="col-md-offset-3 col-md-9">
        <%= f.button :submit, '提交', class: 'btn green' %>
        <%= link_to '取消', communities_path, class: 'btn' %>
      </div>
    </div>
  </div>
<% end %>