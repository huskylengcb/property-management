<div class="portlet light">
  <div class="portlet-title">
    <div class="caption">
      <i class="icon-list"></i>社区管理
    </div>
    <div class="actions">
      <%= link_to new_community_path, class: 'btn blue', 'data-no-turbolink' => true do %>
        <i class="icon-plus"></i>
        <span>创建</span>
      <% end %>
    </div>
  </div>
  <div class="portlet-body">
    <div class="dataTables_wrapper no-footer">
      <div class="row">
        <div class="col-md-12 col-sm-12">
          <%= search_form_for @search, url: communities_path, class: 'form-inline' do |f| %>
              <div class="form-group">
                <%= f.label :name_cont, '社区名' %>
                <%= f.text_field :name_cont, class: 'form-control', placeholder: '社区名' %>
              </div>
              <button type="submit" class="btn btn-default grey">搜索</button>
          <% end %>
        </div>
        <div class="col-md-6 col-sm-12">
          <div class="dataTables_filter pull-right">
          </div>
        </div>
      </div>
      <div class="table-scrollable">
        <table class="table table-striped table-bordered table-hover" id="sample_2">
          <thead>
          <tr>
            <th>
              名称
            </th>
            <th>
              注册时间
            </th>
            <th>
              操作
            </th>
          </tr>
          </thead>
          <tbody>
          <% @communities.each do |community| %>
              <tr>
                <td>
                  <%= community.name %>
                </td>
                <td>
                  <%= l community.created_at %>
                </td>
                <td>
                  <%= link_to edit_admin_community_path(user), class: 'btn btn-xs blue' do %>
                    <i class="fa fa-link"></i> 修改
                  <% end %>
                </td>
              </tr>
          <% end %>
          </tbody>
        </table>
      </div>
      <div class="row">
        <div class="col-md-5 col-sm-12">
          <div class="dataTables_info" id="sample_4_info"><%= paginate_info(@communities) %></div>
        </div>
        <div class="col-md-7 col-sm-12">
          <%= paginate @communities %>
        </div>
      </div>
    </div>
  </div>
</div>